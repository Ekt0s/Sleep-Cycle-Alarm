<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppParentThemeOfAllThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="listStyle">@style/global_list_style</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item> // must be here because of failed to find style 'coordinatorLayoutStyle' in current theme error...
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item> // for settings fragment
    </style>

    <!-- NIGHT THEME -->

    <style name="Theme.DarkTheme" parent="Theme.AppParentThemeOfAllThemes">
        <item name="colorPrimary">@color/dark_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_theme_color_primary_dark</item>
        <item name="colorAccent">@color/dark_theme_color_accent</item>
        <item name="colorForIcons">@color/dark_theme_icons_active_unfocused</item>
        <item name="colorForIconsNegative">@color/dark_theme_icons_active_focused_negative</item>

        // generally used to change three dot menu icon color
        <item name="android:textColorSecondary">@color/dark_theme_text_high_emphasis</item>

        <item name="headerAppNameText">@style/dark_theme_header_app_name_text</item>
        <item name="kebabMenuButton">@style/dark_theme_kebab_menu_button</item>
        <item name="kebabMenuStyle">@style/dark_theme_kebab_menu_style</item>
        <item name="toolbarStyle">@style/dark_theme_toolbar_style</item>
        <item name="headerImage">@style/dark_theme_header_image</item>

        <item name="titleInfoText">@style/dark_theme_title_info_text</item>
        <item name="contentInfoText">@style/dark_theme_content_info_text</item>
        <item name="infoCardStyle">@style/dark_theme_info_card_style</item>

        <item name="listHelperText">@style/dark_theme_list_helper_text</item>
        <item name="titleInListText">@style/dark_theme_title_in_list_text</item>
        <item name="subtitleInListText">@style/dark_theme_subtitle_in_list_text</item>

        <item name="bottomNavigationText">@style/dark_theme_bottom_navigation_text</item>
        <item name="bottomNavigationStyle">@style/dark_theme_bottom_navigation_style</item>

        <item name="appBackgroundStyle">@style/dark_theme_app_background_style</item>

        <item name="floatingActionButtonStyle">@style/dark_theme_floating_action_button_style</item>

        <item name="iconsBackground">@style/dark_theme_icons_background</item>
        <item name="setAlarmIcon">@style/dark_theme_set_alarm_icon</item>
        <item name="accessAlarmIcon">@style/dark_theme_access_alarm_icon</item>
    </style>

    <!-- DAY THEME -->

    <style name="Theme.LightTheme" parent="Theme.AppParentThemeOfAllThemes">
        <item name="colorPrimary">@color/light_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_color_primary_dark</item>
        <item name="colorAccent">@color/light_theme_color_accent</item>
        <item name="colorForIcons">@color/light_theme_icons_active_unfocused</item>
        <item name="colorForIconsNegative">@color/light_theme_icons_active_focused_negative</item>

        // generally used to change three dot menu icon color
        <item name="android:textColorSecondary">@color/light_theme_text_high_emphasis</item>

        <item name="headerAppNameText">@style/light_theme_header_app_name_text</item>
        <item name="kebabMenuButton">@style/light_theme_kebab_menu_button</item>
        <item name="kebabMenuStyle">@style/light_theme_kebab_menu_style</item>
        <item name="toolbarStyle">@style/light_theme_toolbar_style</item>
        <item name="headerImage">@style/light_theme_header_image</item>

        <item name="titleInfoText">@style/light_theme_title_info_text</item>
        <item name="contentInfoText">@style/light_theme_content_info_text</item>
        <item name="infoCardStyle">@style/light_theme_info_card_style</item>

        <item name="listHelperText">@style/light_theme_list_helper_text</item>
        <item name="titleInListText">@style/light_theme_title_in_list_text</item>
        <item name="subtitleInListText">@style/light_theme_subtitle_in_list_text</item>

        <item name="bottomNavigationText">@style/light_theme_bottom_navigation_text</item>
        <item name="bottomNavigationStyle">@style/light_theme_bottom_navigation_style</item>

        <item name="appBackgroundStyle">@style/light_theme_app_background_style</item>

        <item name="floatingActionButtonStyle">@style/light_theme_floating_action_button_style</item>

        <item name="iconsBackground">@style/light_theme_icons_background</item>
        <item name="setAlarmIcon">@style/light_theme_set_alarm_icon</item>
        <item name="accessAlarmIcon">@style/light_theme_access_alarm_icon</item>
    </style>

</resources>