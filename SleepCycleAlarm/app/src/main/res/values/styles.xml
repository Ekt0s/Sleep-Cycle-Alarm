<resources>

    <style name="global_font_light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="global_font_regular">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="global_font_medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="global_font_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="global_header_app_name_text">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        //android:gravity does not works here
    </style>

    <style name="global_toolbar_style" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_header_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="global_title_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_content_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_info_card_style">
        <item name="cardCornerRadius">@dimen/corner_radius_size</item>
        <item name="cardElevation">@dimen/elevation_size</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">@dimen/content_padding_info_board</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin_size</item>
        <item name="android:layout_marginRight">@dimen/normal_margin_size</item>
    </style>

    <style name="global_list_helper_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="global_title_in_list_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="global_subtitle_in_list_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="global_list_style">
        <item name="android:layout_marginStart">@dimen/medium_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/extra_large_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_list_card_style" parent="global_info_card_style">
        <item name="android:layout_marginBottom">@dimen/medium_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin_size</item>
        <item name="android:layout_marginStart">@dimen/normal_margin_size</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_size</item>
    </style>

    <style name="global_bottom_navigation_text" parent="global_font_regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="global_bottom_navigation_style">
    </style>

    <style name="global_floating_action_button_style" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/fabWidth</item>
        <item name="android:layout_height">@dimen/fabHeight</item>
    </style>

    <style name="global_close_activity_button_style">
        <item name="android:layout_width">@dimen/iconsSize</item>
        <item name="android:layout_height">@dimen/iconsSize</item>
        <item name="android:layout_marginStart">@dimen/medium_margin_size</item>
        <item name="android:layout_marginTop">@dimen/extra_large_margin_size</item>
        <item name="android:background">@drawable/ic_close</item>
    </style>

    <style name="global_icons_style">
        <item name="android:layout_width">@dimen/iconsSize</item>
        <item name="android:layout_height">@dimen/iconsSize</item>
        <item name="android:layout_marginEnd">@dimen/extra_large_margin_size</item>
        <item name="android:layout_marginStart">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
    </style>






    <style name="header_app_name_text" parent="global_header_app_name_text">
        <item name="android:textColor">@color/text_high_emphasis</item>
    </style>

    <style name="kebab_menu_style">
        <item name="android:popupBackground">@color/color_primary_dark</item>
    </style>

    <style name="toolbar_style" parent="global_toolbar_style">
        <item name="android:textColorSecondary">@color/text_high_emphasis</item>
    </style>

    <style name="header_image" parent="global_header_image">
        <item name="android:src">@drawable/dark_theme_header_image</item>
    </style>

    <style name="title_info_text" parent="global_title_info_text">
        <item name="android:textColor">@color/text_on_card_info</item>
    </style>

    <style name="content_info_text" parent="global_content_info_text">
        <item name="android:textColor">@color/text_on_card_info</item>
    </style>

    <style name="info_card_style" parent="global_info_card_style">
        <item name="cardBackgroundColor">@color/color_accent</item>
    </style>

    <style name="list_helper_text" parent="global_list_helper_text">
        <item name="android:textColor">@color/text_high_emphasis</item>
    </style>

    <style name="title_in_list_text" parent="global_title_in_list_text">
        <item name="android:textColor">@color/text_high_emphasis</item>
    </style>

    <style name="subtitle_in_list_text" parent="global_subtitle_in_list_text">
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>

    <style name="list_card_style" parent="global_list_card_style">
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    <style name="bottom_navigation_text" parent="global_bottom_navigation_text">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="bottom_navigation_style" parent="global_bottom_navigation_style">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="app_background_style">
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="floating_action_button_style" parent="global_floating_action_button_style">
        <item name="backgroundTint">@color/color_accent</item>
    </style>

    <style name="icons_background">
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="set_alarm_icon" parent="global_icons_style"></style>

    <style name="access_alarm_icon" parent="global_icons_style"></style>

</resources>