<resources>


    <!-- STANDARD FOR EVERY THEME VARIABLES CONFIG -->

    <style name="global_font_light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="global_font_regular">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="global_font_medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="global_font_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="global_header_app_name_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
    </style>

    <style name="global_kebab_menu_button"></style>

    <style name="global_kebab_menu_style"></style>

    <style name="global_header_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="global_title_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_extra_large_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_content_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_info_card_style">
        <item name="cardCornerRadius">@dimen/corner_radius_size</item>
        <item name="cardElevation">@dimen/elevation_size</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/content_padding_info_board</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_list_helper_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="global_title_in_list_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="global_subtitle_in_list_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="global_list_style">
        <item name="android:layout_marginStart">@dimen/large_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/large_margin_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/extra_large_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_bottom_navigation_text" parent="global_font_regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="global_bottom_navigation_style"></style>

    <style name="global_icons_background"></style>

    <style name="global_floating_action_button_style" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/fabSize</item>
        <item name="android:layout_height">@dimen/fabSize</item>
        <item name="android:layout_margin">@dimen/extra_large_margin_size</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="global_icons_style">
        <item name="android:layout_width">@dimen/iconsSize</item>
        <item name="android:layout_height">@dimen/iconsSize</item>
        <item name="android:layout_marginEnd">@dimen/extra_large_margin_size</item>
        <item name="android:layout_marginStart">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
    </style>





    <!-- NIGHT THEME -->

    <style name="dark_theme_header_app_name_text" parent="global_header_app_name_text">
        <item name="android:textColor">@color/dark_theme_text_high_emphasis</item>
    </style>

    <style name="dark_theme_kebab_menu_button" parent="global_kebab_menu_button"></style>

    <style name="dark_theme_kebab_menu_style" parent="global_kebab_menu_style"></style>

    <style name="dark_theme_header_image" parent="global_header_image">
        <item name="android:src">@drawable/dark_theme_header_image</item>
    </style>

    <style name="dark_theme_title_info_text" parent="global_title_info_text">
        <item name="android:textColor">@color/dark_theme_text_on_card_info</item>
    </style>

    <style name="dark_theme_content_info_text" parent="global_content_info_text">
        <item name="android:textColor">@color/dark_theme_text_on_card_info</item>
    </style>

    <style name="dark_theme_info_card_style" parent="global_info_card_style">
        <item name="cardBackgroundColor">@color/dark_theme_color_accent</item>
    </style>

    <style name="dark_theme_list_helper_text" parent="global_list_helper_text">
        <item name="android:textColor">@color/dark_theme_text_high_emphasis</item>
    </style>

    <style name="dark_theme_title_in_list_text" parent="global_title_in_list_text">
        <item name="android:textColor">@color/dark_theme_text_high_emphasis</item>
    </style>

    <style name="dark_theme_subtitle_in_list_text" parent="global_subtitle_in_list_text">
        <item name="android:textColor">@color/dark_theme_text_medium_emphasis</item>
    </style>

    <style name="dark_theme_bottom_navigation_text" parent="global_bottom_navigation_text">
        <item name="android:textColor">@color/dark_theme_color_accent</item>
    </style>

    <style name="dark_theme_bottom_navigation_style" parent="global_bottom_navigation_style"></style>

    <style name="dark_theme_app_background_style">
        <item name="android:background">@color/dark_theme_color_primary_dark</item>
    </style>

    <style name="dark_theme_floating_action_button_style" parent="global_floating_action_button_style">
        <item name="backgroundTint">@color/dark_theme_color_accent</item>
    </style>

    <style name="dark_theme_icons_background" parent="global_icons_background">
        <item name="android:background">@color/dark_theme_color_primary_dark</item>
    </style>

    <style name="dark_theme_set_alarm_icon" parent="global_icons_style"></style>

    <style name="dark_theme_access_alarm_icon" parent="global_icons_style"></style>





    <!-- DAY THEME -->

    <style name="light_theme_header_app_name_text" parent="global_header_app_name_text">
        <item name="android:textColor">@color/light_theme_text_high_emphasis</item>
    </style>

    <style name="light_theme_kebab_menu_button" parent="global_kebab_menu_button"></style>

    <style name="light_theme_kebab_menu_style" parent="global_kebab_menu_style"></style>

    <style name="light_theme_header_image" parent="global_header_image">
        <item name="android:src">@drawable/light_theme_header_image</item>
    </style>

    <style name="light_theme_title_info_text" parent="global_title_info_text">
        <item name="android:textColor">@color/light_theme_text_on_card_info</item>
    </style>

    <style name="light_theme_content_info_text" parent="global_content_info_text">
        <item name="android:textColor">@color/light_theme_text_on_card_info</item>
    </style>

    <style name="light_theme_info_card_style" parent="global_info_card_style">
        <item name="cardBackgroundColor">@color/light_theme_color_accent</item>
    </style>

    <style name="light_theme_list_helper_text" parent="global_list_helper_text">
        <item name="android:textColor">@color/light_theme_text_high_emphasis</item>
    </style>

    <style name="light_theme_title_in_list_text" parent="global_title_in_list_text">
        <item name="android:textColor">@color/light_theme_text_high_emphasis</item>
    </style>

    <style name="light_theme_subtitle_in_list_text" parent="global_subtitle_in_list_text">
        <item name="android:textColor">@color/light_theme_text_medium_emphasis</item>
    </style>

    <style name="light_theme_bottom_navigation_text" parent="global_bottom_navigation_text">
        <item name="android:textColor">@color/light_theme_color_accent</item>
    </style>

    <style name="light_theme_bottom_navigation_style" parent="global_bottom_navigation_style"></style>

    <style name="light_theme_app_background_style">
        <item name="android:background">@color/light_theme_color_primary_dark</item>
    </style>

    <style name="light_theme_floating_action_button_style" parent="global_floating_action_button_style">
        <item name="backgroundTint">@color/light_theme_color_accent</item>
    </style>

    <style name="light_theme_icons_background" parent="global_icons_background">
        <item name="android:background">@color/light_theme_color_primary_dark</item>
    </style>

    <style name="light_theme_set_alarm_icon" parent="global_icons_style"></style>

    <style name="light_theme_access_alarm_icon" parent="global_icons_style"></style>

</resources>