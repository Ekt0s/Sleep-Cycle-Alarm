<resources>


    <!-- STANDARD FOR EVERY THEME VARIABLES CONFIG -->

    <style name="global_font_light">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>
    <style name="global_font_regular">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="global_font_semibold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="global_tab_text" parent="global_font_regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="global_tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="stl_clickable">true</item>
        <item name="stl_defaultTabTextAllCaps">true</item>
        <item name="stl_defaultTabTextHorizontalPadding">16dp</item>
        <item name="stl_defaultTabTextSize">@dimen/small_text_size</item>
        <item name="stl_distributeEvenly">true</item>
        <item name="stl_dividerColor">@color/transparent</item>
        <item name="stl_dividerThickness">0dp</item>
        <item name="stl_indicatorCornerRadius">2dp</item>
        <item name="stl_indicatorGravity">bottom</item>
        <item name="stl_indicatorInterpolation">smart</item>
        <item name="stl_indicatorThickness">4dp</item>
        <item name="stl_indicatorWidth">auto</item>
        <item name="stl_overlineColor">@color/transparent</item>
        <item name="stl_overlineThickness">0dp</item>
        <item name="stl_titleOffset">24dp</item>
        <item name="stl_underlineThickness">1dp</item>
        <item name="stl_defaultTabBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="global_title_info_text" parent="global_font_regular">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
    </style>

    <style name="global_content_info_text" parent="global_font_light">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
    </style>

    <style name="global_info_card_style">
        <item name="cardCornerRadius">@dimen/corner_radius_size</item>
        <item name="cardElevation">@dimen/elevation_size</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/content_padding_info_board</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_hour_digits_in_list_text" parent="global_font_semibold">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
    </style>

    <style name="global_clickable_object_hint_text" parent="global_font_light">
        <item name="android:layout_marginStart">@dimen/small_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/small_margin_size</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="global_info_in_list_text" parent="global_font_light">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="global_divider_in_list_style">
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/large_margin_size</item>
    </style>

    <style name="global_list_style">
        <item name="android:layout_marginStart">@dimen/large_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/large_margin_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="global_header_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="global_set_hour_button_style" parent="global_font_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elevation_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:text">@string/set_hour_button_text</item>
    </style>

    <style name="icons_same_attributes">
        <item name="android:layout_width">@dimen/iconsSize</item>
        <item name="android:layout_height">@dimen/iconsSize</item>
        <item name="android:layout_marginEnd">@dimen/small_margin_size</item>
        <item name="android:layout_marginStart">@dimen/small_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
    </style>

    <style name="global_sleep_time_icon" parent="icons_same_attributes">
        <item name="android:contentDescription">@string/icon_sleep_time_description</item>
        <item name="android:src">@drawable/ic_clock_sleep_time</item>
    </style>

    <style name="global_sleep_quality_icon" parent="icons_same_attributes">
        <item name="android:contentDescription">@string/icon_sleep_quality_description</item>
        <item name="android:src">@drawable/ic_heart_sleep_quality</item>
    </style>





    <!-- NIGHT THEME -->

    <style name="night_theme_tab_text" parent="global_tab_text">
        <item name="android:textColor">@color/night_theme_text_color_primary</item>
    </style>

    <style name="night_theme_tab_style" parent="global_tab_style">
        <item name="android:background">@color/night_theme_color_primary</item>
        <item name="stl_defaultTabTextColor">@color/night_theme_color_accent</item>
        <item name="stl_indicatorColor">@color/night_theme_color_accent</item>
        <item name="stl_underlineColor">@color/night_theme_color_primary</item>
    </style>

    <style name="night_theme_title_info_text" parent="global_title_info_text">
        <item name="android:textColor">@color/night_theme_text_color_primary</item>
    </style>

    <style name="night_theme_content_info_text" parent="global_content_info_text">
        <item name="android:textColor">@color/night_theme_text_color_primary</item>
    </style>

    <style name="night_theme_info_card_style" parent="global_info_card_style">
        <item name="cardBackgroundColor">@color/night_theme_color_primary</item>
    </style>

    <style name="night_theme_hour_digits_in_list_text" parent="global_hour_digits_in_list_text">
        <item name="android:textColor">@color/night_theme_text_color_primary</item>
    </style>

    <style name="night_theme_clickable_object_hint_text" parent="global_clickable_object_hint_text">
        <item name="android:textColor">@color/night_theme_hint_color</item>
    </style>

    <style name="night_theme_info_in_list_text" parent="global_info_in_list_text">
        <item name="android:textColor">@color/night_theme_text_color_secondary</item>
    </style>

    <style name="night_theme_divider_in_list_style" parent="global_divider_in_list_style">
        <item name="android:background">@color/night_theme_color_secondary_with_opacity</item>
    </style>

    <style name="night_theme_background_gradient">
        <item name="android:background">@drawable/night_theme_background_gradient</item>
    </style>

    <style name="night_theme_header_image" parent="global_header_image">
        <item name="android:src">@drawable/night_theme_header_image</item>
    </style>

    <style name="night_theme_set_hour_button_style" parent="global_set_hour_button_style">
        <item name="android:textColor">@color/night_theme_color_primary</item>
        <item name="android:backgroundTint">@color/night_theme_color_accent</item>
    </style>





    <!-- DAY THEME -->

    <style name="day_theme_tab_text" parent="global_tab_text">
        <item name="android:textColor">@color/day_theme_text_color_primary</item>
    </style>

    <style name="day_theme_tab_style" parent="global_tab_style">
        <item name="android:background">@color/day_theme_color_primary</item>
        <item name="stl_defaultTabTextColor">@color/day_theme_color_accent</item>
        <item name="stl_indicatorColor">@color/day_theme_color_accent</item>
        <item name="stl_underlineColor">@color/day_theme_color_primary</item>
    </style>

    <style name="day_theme_title_info_text" parent="global_title_info_text">
        <item name="android:textColor">@color/day_theme_text_color_primary</item>
    </style>

    <style name="day_theme_content_info_text" parent="global_content_info_text">
        <item name="android:textColor">@color/day_theme_text_color_primary</item>
    </style>

    <style name="day_theme_info_card_style" parent="global_info_card_style">
        <item name="cardBackgroundColor">@color/day_theme_color_primary</item>
    </style>

    <style name="day_theme_hour_digits_in_list_text" parent="global_hour_digits_in_list_text">
        <item name="android:textColor">@color/day_theme_text_color_primary</item>
    </style>

    <style name="day_theme_clickable_object_hint_text" parent="global_clickable_object_hint_text">
        <item name="android:textColor">@color/day_theme_hint_color</item>
    </style>

    <style name="day_theme_info_in_list_text" parent="global_info_in_list_text">
        <item name="android:textColor">@color/day_theme_text_color_secondary</item>
    </style>

    <style name="day_theme_divider_in_list_style" parent="global_divider_in_list_style">
        <item name="android:background">@color/day_theme_color_secondary_with_opacity</item>
    </style>

    <style name="day_theme_background_gradient">
        <item name="android:background">@drawable/day_theme_background_gradient</item>
    </style>

    <style name="day_theme_header_image" parent="global_header_image">
        <item name="android:src">@drawable/day_theme_header_image</item>
    </style>

    <style name="day_theme_set_hour_button_style" parent="global_set_hour_button_style">
        <item name="android:textColor">@color/day_theme_color_primary</item>
        <item name="android:backgroundTint">@color/day_theme_color_accent</item>
    </style>

</resources>
